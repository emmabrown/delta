<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg3_run"
    android:weightSum="1"
    tools:context="phoenix.delta.TrialSettingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Number of Trials -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.00" >

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/num_trial"
                    android:id="@+id/textView4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/num_trial"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi"
                    android:background="@drawable/transparent_button"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <!-- Initial Trial Duration Time -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/init_trial_time"
                    android:id="@+id/init_trial_time"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/trial_time"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi"
                    android:background="@drawable/transparent_button"
                    android:textStyle="bold"/>
            </RelativeLayout>


        </LinearLayout>

        <!-- delay game time -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/game_time_delay"
                    android:id="@+id/time_increment"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/delay_game_time"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi"
                    android:background="@drawable/transparent_button"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </LinearLayout>

        <!-- Instant game time -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.00">

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/game_time_instant"
                    android:id="@+id/inc_interval_num"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/instant_game_time"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi"
                    android:background="@drawable/transparent_button"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </LinearLayout>

        <!-- Wait time increment -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.00" >

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/time_inc"
                    android:id="@+id/textView5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/wait_time_inc"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:imeOptions="flagNoExtractUi"
                    android:background="@drawable/transparent_button"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_change"
            android:id="@+id/save_change"
            android:textSize="24dp"
            android:background="@drawable/transparent_button"
            android:layout_marginTop="15dp"/>

        <!-- Default Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_setting"
            android:id="@+id/default_btn"
            android:textSize="24dp"
            android:background="@drawable/transparent_button"
            android:layout_marginTop="15dp"/>

        <!-- Cancel Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/cancel_btn"
            android:textSize="24dp"
            android:background="@drawable/transparent_button"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
</ScrollView><!-- From: file:/D:/jessica/Documents/GitHub/delta/delta/app/src/main/res/layout/activity_trial_setting.xml -->