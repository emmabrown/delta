<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="phoenix.delta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <!-- Internet permission for Box -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- No permission needed for -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/xxhic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="phoenix.delta.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="phoenix.delta.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="phoenix.delta.AdminActivity"
            android:label="@string/title_activity_admin" >
        </activity>
        <activity
            android:name="phoenix.delta.TeacherActivity"
            android:label="@string/title_activity_teacher" >
        </activity>
        <activity
            android:name="phoenix.delta.RegAdminActivity"
            android:label="@string/title_activity_reg_admin" >
        </activity>
        <activity
            android:name="phoenix.delta.TrialSettingActivity"
            android:label="@string/title_activity_trial_setting" >
        </activity>
        <activity
            android:name="phoenix.delta.SessionPrep"
            android:label="@string/title_activity_session_prep" >
        </activity>
        <activity
            android:name="phoenix.delta.TrialMain"
            android:label=""
            android:theme="@style/SessionMenuTheme" >
        </activity>
        <activity
            android:name="phoenix.delta.TrialSelection"
            android:label="@string/title_activity_trial_selection" >
        </activity>
        <activity
            android:name="phoenix.delta.DroidRunJumpActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="phoenix.delta.ManageTeacherActivity"
            android:label="@string/title_activity_manage_teacher" >
        </activity>
        <activity
            android:name="phoenix.delta.ManageStudentActivity"
            android:label="@string/title_activity_manage_student" >
        </activity>
        <activity
            android:name="phoenix.delta.TrialWaitActivity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_trial_wait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="phoenix.delta.BoxActivity"
            android:label="@string/title_activity_box" >
        </activity>
        <activity
            android:name="com.box.androidsdk.content.auth.OAuthActivity"
            android:label="@string/accounts"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="phoenix.delta.DoneSessionActivity"
            android:label="@string/title_activity_done_session" >
        </activity>
    </application>

</manifest>