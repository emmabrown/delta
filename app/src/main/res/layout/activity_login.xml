 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
      android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:orientation="vertical"
      android:background="@drawable/bg"
      tools:context="phoenix.delta.LoginActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/delta_logo"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_activity_login"
            android:textSize="50sp"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:id="@+id/username"
            android:hint="@string/prompt_username"
            android:textSize="20sp"
            android:background="#64ffffff"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:hint="@string/prompt_password"
            android:background="#64ffffff"
            android:enabled="false"
            android:textSize="20sp"/>

        <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/login_error_msg" />

         <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teacher_login"
            android:id="@+id/continue_RA_login_btn"
            android:textSize="20sp"
            android:background="@drawable/white_button"
            android:layout_marginTop="15dp"/>

 </LinearLayout>

